<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="android:fontFamily">@font/sanspro_regular</item>
        <item name="background">@color/default_background</item>
    </style>

    <!--Card View Style-->
    <style name="AppCardViewStyle" parent="CardView">
        <item name="cardElevation">@dimen/space_half</item>
        <item name="cardCornerRadius">@dimen/space_x1</item>
        <item name="android:layout_marginStart">@dimen/space_half</item>
        <item name="android:layout_marginEnd">@dimen/space_half</item>
    </style>

    <style name="BaseAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="BaseAppTheme">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="ActiveText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="InactiveText">
        <item name="android:textColor">@color/darkGray2</item>
    </style>

    <!--Base Text style-->
    <style name="BaseAppTheme.Text" parent="TextAppearance.AppCompat" />

    <style name="BaseAppTheme.Text.Bold">
        <item name="android:fontFamily">@font/sanspro_bold</item>
    </style>

    <style name="BaseAppTheme.Text.Regular">
        <item name="android:fontFamily">@font/sanspro_regular</item>
    </style>

    <style name="BaseAppTheme.Text.Regular.Italic">
        <item name="android:fontFamily">@font/sanspro_italic</item>
    </style>

    <!--Text style-->
    <style name="HeadlineText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/h2_text</item>
    </style>

    <style name="SubHeadlineText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/h3_text</item>
    </style>

    <style name="BodyText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/body_text</item>
    </style>

    <style name="MicroText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/body_text</item>
    </style>

    <style name="MiniText" parent="BaseAppTheme.Text">
        <item name="android:textSize">@dimen/micro_text</item>
    </style>

    <!--Headline Text Bold-->
    <style name="HeadlineText.Bold">
        <item name="android:fontFamily">@font/sanspro_bold</item>
    </style>

    <style name="HeadlineText.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeadlineText.Bold.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="HeadlineText.Bold.LightGray">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="HeadlineText.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Subheadline Text Bold-->
    <style name="SubHeadlineText.Bold">
        <item name="android:fontFamily">@font/sanspro_bold</item>
    </style>

    <style name="SubHeadlineText.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubHeadlineText.Bold.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SubHeadlineText.Bold.LightGray">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="SubHeadlineText.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--Subheadline Text Regular-->
    <style name="SubHeadlineText.Regular">
        <item name="android:textSize">@dimen/h2_text</item>
        <item name="android:fontFamily">@font/sanspro_regular</item>
    </style>

    <style name="SubHeadlineText.Regular.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SubHeadlineText.Regular.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="SubHeadlineText.Regular.LightGray">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="SubHeadlineText.Regular.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SubHeadlineText.Medium">
        <item name="android:textSize">@dimen/h2_text</item>
        <item name="android:fontFamily">@font/sanspro_thin</item>
    </style>


    <!--Body Text Bold-->
    <style name="BodyText.Bold">
        <item name="android:fontFamily">@font/sanspro_bold</item>
    </style>

    <style name="BodyText.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BodyText.Bold.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="BodyText.Bold.LightGray">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="BodyText.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyText.Medium">
        <item name="android:fontFamily">@font/sanspro_regular</item>
    </style>


    <!--Body Text Regular-->
    <style name="BodyText.Regular">
        <item name="android:fontFamily">@font/sanspro_regular</item>
    </style>

    <style name="BodyText.Regular.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BodyText.Regular.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="BodyText.Regular.LightGray">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="BodyText.Regular.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BodyText.Regular.Red">
        <item name="android:textColor">@color/NewRed3</item>
    </style>

    <!--Micro Text Bold-->
    <style name="MicroText.Bold">
        <item name="android:fontFamily">@font/sanspro_bold</item>
    </style>

    <style name="MicroText.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MicroText.Bold.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MicroText.Bold.LightGray">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="MicroText.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--Micro Text Regular-->
    <style name="MicroText.Regular">
        <item name="android:fontFamily">@font/sanspro_regular</item>
    </style>

    <style name="MicroText.Regular.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MicroText.Regular.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MicroText.Regular.LightGray">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="MicroText.Regular.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--Mini Text Bold-->
    <style name="MiniText.Bold">
        <item name="android:fontFamily">@font/sanspro_bold</item>
    </style>

    <style name="MiniText.Bold.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MiniText.Bold.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MiniText.Bold.LightGray">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="MiniText.Bold.White">
        <item name="android:textColor">@color/white</item>
    </style>


    <!--Mini Text Regular-->
    <style name="MiniText.Regular">
        <item name="android:fontFamily">@font/sanspro_regular</item>
    </style>

    <style name="MiniText.Regular.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MiniText.Regular.Gray">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="MiniText.Regular.LightGray">
        <item name="android:textColor">@color/lightGray</item>
    </style>

    <style name="MiniText.Regular.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ToolbarTextAppearance" parent="BaseAppTheme.Text.Bold">
        <item name="android:textSize">@dimen/h3_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--Button Style-->
    <style name="ButtonPrimary" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_primary_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/space_x6</item>
        <item name="android:width">@dimen/space_x40</item>
        <item name="android:textSize">@dimen/body_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/sanspro_bold</item>
    </style>

    <style name="ButtonSecondary" parent="ButtonPrimary">
        <item name="android:background">@drawable/button_transparent_bg_primary</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonTransparent" parent="ButtonPrimary">
        <item name="android:background">@drawable/button_transparent_bg</item>
    </style>

    <style name="ButtonPrimary.Half">
        <item name="android:width">160dp</item>
    </style>

    <style name="StyleProgressBar">
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:indeterminateTint" tools:targetApi="lollipop">@color/purple_700</item>
    </style>

    <!--Dialog Style-->
    <style name="BaseDimDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">true</item>
        <item name="bottomSheetStyle">@style/DimBackRound</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="DimDialogTheme" parent="BaseDimDialog" />

    <style name="DimBackRound" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dim_black</item>
    </style>

    <!--Bottom Dialog Style-->
    <style name="BottomDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/top_rounder_background_white</item>
    </style>



</resources>